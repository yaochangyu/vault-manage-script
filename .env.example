# Vault 伺服器位址
VAULT_ADDR=https://vault.web.internal

# 跳過 TLS 憑證驗證（僅限開發環境使用）
# 生產環境請設定為 false 並正確配置 TLS 憑證
VAULT_SKIP_VERIFY=true

# Vault 認證資訊（userpass 方式）
VAULT_USERNAME=your-username
VAULT_PASSWORD=your-password

# KV Secrets Engine Mount Point（選用，預設為 secret）
# VAULT_MOUNT=secrets
# ==================================================
# SQL Server 連線資訊（sql-permission.sh）
SQL_SERVER=localhost
SQL_PORT=1433

# 管理員帳號（用於管理其他帳號的權限）
ADMIN_USER=sa
ADMIN_PASSWORD=YourStrongPassword!

# 預設輸出格式（json / table / csv）
DEFAULT_OUTPUT_FORMAT=table

# 是否啟用稽核日誌
ENABLE_AUDIT_LOG=true
AUDIT_LOG_FILE=./audit.log

# 查詢逾時時間（秒）
QUERY_TIMEOUT=30

# 是否顯示詳細輸出
VERBOSE=false

# 是否啟用 dry-run 模式（預覽變更但不實際執行）
DRY_RUN=false
